        button{
            background-color: white;
            border: none;
            box-shadow: 0 1px 3px gray;
            height: 50px;
            width: 50px;
            font-size: 25px;
            border-radius: 5px;
            margin: 0.5px;
        }
        .equal-button{
            background-color: rgb(110, 36, 36);
            color: white;
            font-size: 25px;
        }
        .main-body{
            background-color: rgb(245, 243, 240);
